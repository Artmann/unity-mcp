{
  "name": "unity-mcp",
  "author": "Christoffer Artmann",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Unity.",
  "license": "MIT",
  "homepage": "https://github.com/Artmann/unity-mcp",
  "keywords": [
    "typescript",
    "mcp",
    "unity",
    "blazing-fast",
    "claude"
  ],
  "module": "index.ts",
  "type": "module",
  "bin": {
    "unity": "./build/index.js"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "inspector": "bun run build ; bun x @modelcontextprotocol/inspector node build/index.js",
    "prepare": "bun run build",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.13.10",
    "prettier": "^3.5.3"
  }
}
